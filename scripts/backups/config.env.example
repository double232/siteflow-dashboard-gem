# SiteFlow Backup Configuration
# Copy to config.env and fill in your values

# NAS Configuration (via Tailscale)
NAS_IP=100.126.124.77
NAS_SHARE=data
NAS_MOUNT=/mnt/nas-backup
NAS_CRED_FILE=/root/.nas-cred

# Restic Configuration (must match BackupExecutor in backend/app/services/backups.py)
RESTIC_REPO=/mnt/nas-backup/backups/restic
RESTIC_PASSWORD_FILE=/root/.restic-password

# Retention Policy
KEEP_DAILY=30
KEEP_WEEKLY=4
KEEP_MONTHLY=6

# Sites Configuration
SITES_ROOT=/opt/sites

# SiteFlow API (for reporting backup results)
SITEFLOW_API=http://127.0.0.1:8000/api/backups/runs

# Hetzner Cloud (optional - for VM snapshots)
# HETZNER_API_TOKEN=your-token-here
# HETZNER_SERVER_ID=your-server-id
SNAPSHOT_KEEP_COUNT=4

# Verification
VERIFY_DATA_SUBSET=5%

# Logging
LOG_DIR=/var/log/siteflow-backups
RUN_DIR=/var/lib/siteflow/backups/runs
